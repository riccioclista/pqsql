{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build pqsql",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Pqsql.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release build pqsql",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Pqsql.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c",
                "Release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build pqsql tests",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/PqsqlTests/PqsqlTests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "setup dependencies",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "msbuild",
                "-target:SetupDependencies",
                "-property:PgsqlDownloadUrl=https://sbp.enterprisedb.com/getfile.jsp?fileid=12354",
                "-consoleloggerparameters:NoSummary",
                "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
            ],
            "windows": {
                "args": [
                    "msbuild",
                    "-target:SetupDependencies",
                    "-property:PgsqlDownloadUrl=https://sbp.enterprisedb.com/getfile.jsp?fileid=12464",
                    "-consoleloggerparameters:NoSummary",
                    "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
                ]
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "debug reconfigure libpqbinfmt",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "msbuild",
                "-target:Reconfigure",
                "-property:PgsqlPath=${workspaceFolder}/libpqbinfmt/deps/pgsql",
                "-consoleloggerparameters:NoSummary",
                "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
            ],
            "windows": {
                "args": [
                    "msbuild",
                    "-target:Reconfigure",
                    "-property:PgsqlPath=${workspaceFolder}/libpqbinfmt/deps/pgsql",
                    "-property:CMakeExe=C:\\Program Files\\CMake\\bin\\cmake.exe",
                    "-consoleloggerparameters:NoSummary",
                    "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
                ]
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release reconfigure libpqbinfmt",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "msbuild",
                "-target:Reconfigure",
                "-property:Configuration=Release",
                "-property:PgsqlPath=${workspaceFolder}/libpqbinfmt/deps/pgsql",
                "-consoleloggerparameters:NoSummary",
                "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
            ],
            "windows": {
                "args": [
                    "msbuild",
                    "-target:Reconfigure",
                    "-property:Configuration=Release",
                    "-property:PgsqlPath=${workspaceFolder}/libpqbinfmt/deps/pgsql",
                    "-property:CMakeExe=C:\\Program Files\\CMake\\bin\\cmake.exe",
                    "-consoleloggerparameters:NoSummary",
                    "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
                ]
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "debug build libpqbinfmt",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "msbuild",
                "-target:Build",
                "-consoleloggerparameters:NoSummary",
                "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
            ],
            "windows": {
                "args": [
                    "msbuild",
                    "-target:Build",
                    "-property:CMakeExe=C:\\Program Files\\CMake\\bin\\cmake.exe",
                    "-consoleloggerparameters:NoSummary",
                    "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
                ]
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release build libpqbinfmt",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "msbuild",
                "-target:Build",
                "-property:Configuration=Release",
                "-consoleloggerparameters:NoSummary",
                "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
            ],
            "windows": {
                "args": [
                    "msbuild",
                    "-target:Build",
                    "-property:Configuration=Release",
                    "-property:CMakeExe=C:\\Program Files\\CMake\\bin\\cmake.exe",
                    "-consoleloggerparameters:NoSummary",
                    "${workspaceFolder}/libpqbinfmt/libpqbinfmt.proj"
                ]
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "debug build",
            "dependsOn": [
                "debug build libpqbinfmt",
                "debug build pqsql",
                "build pqsql tests",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "release build",
            "dependsOn": [
                "release build libpqbinfmt",
                "release build pqsql",
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "start docker pgsql 9.6",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "msbuild",
                "-target:StartPgsqlContainer",
                "-property:PgsqlDockerImg=postgres:9.6",
                "-consoleloggerparameters:NoSummary",
                "${workspaceFolder}/PqsqlTests/PqsqlTests.csproj"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "configure test runsettings",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "msbuild",
                "PqsqlTests.csproj",
                "-t:ConfigureRunSettings"
            ],
            "options": {
                "cwd": "${workspaceFolder}/PqsqlTests"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "PqsqlTests.csproj",
                "-s",
                "../Pqsql.runsettings"
            ],
            "options": {
                "cwd": "${workspaceFolder}/PqsqlTests"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}